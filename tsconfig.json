{
  "compilerOptions": {
    "outDir": "lib",
    "jsx": "react",
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "files": [
    "src/typings/image.d.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "example/*",
    "example"
  ]
}